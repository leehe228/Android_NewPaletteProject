<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NoInternetActivity"
        android:background="#FFFFFF"
        android:padding="20dp">

    <TextView
            android:id="@+id/NoInternet_TextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/quicksand"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/NoInternet_TextView_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nanumr"
            android:text="서버에 연결할 수 없습니다."
            android:textColor="#E50000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NoInternet_TextView_title" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="#EDEDED"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NoInternet_TextView_text1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumr"
                android:text="스마트폰의 인터넷 연결을 다시 한 번 확인해주세요."
                android:textAlignment="center"
                android:textColor="#393939"
                android:textSize="14dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanumr"
                android:text="스마트폰 인터넷 연결에 문제가 없다면 \n서버가 점검중일 수 있습니다."
                android:textAlignment="center"
                android:textColor="#393939"
                android:textSize="14dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanumr"
                android:text="지속적으로 같은 문제가 발생하는 경우\n고객센터로 문의 바랍니다."
                android:textAlignment="center"
                android:textColor="#393939"
                android:textSize="14dp" />

    </LinearLayout>

    <Button
            android:id="@+id/NoInternet_Button_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/basic_button"
            android:fontFamily="@font/nanumr"
            android:stateListAnimator="@null"
            android:text="새로고침"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>