<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".HomeActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/Main_SwipeLayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginTop="60dp"
                        android:id="@+id/Main_ViewPager_main">

                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_1"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_3"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_4"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_5"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_6"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_7"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_8"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_9"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_10"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_11"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_12"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_13"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_14"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_15"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_16"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_17"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                    <com.anonymoushippo.palette.SquareImageView
                            android:id="@+id/Main_ImageView_18"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop" />

                    <Space
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                </LinearLayout>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="68dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/Main_blurView_Bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:realtimeBlurRadius="50dp"
            app:realtimeOverlayColor="#BEFFFFFF" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageButton
                android:id="@+id/HomeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="20dp"
                app:srcCompat="@drawable/home_icon" />

        <ImageButton
                android:id="@+id/PopularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/un_hot_icon" />

        <ImageButton
                android:id="@+id/SearchButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/un_search_icon" />

        <ImageButton
                android:id="@+id/LikeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/un_like_icon" />

        <ImageButton
                android:id="@+id/PortfolioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/un_portfolio_icon" />

    </LinearLayout>

    <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/Main_blurView_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBackBlurClicked"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:realtimeBlurRadius="40dp"
            app:realtimeOverlayColor="#BEFFFFFF" />

    <com.anonymoushippo.palette.SquareImageView
            android:id="@+id/Main_ImageView_PopUp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="80dp"
            android:background="#E8E8E8"
            android:elevation="6dp"
            android:onClick="onBigImageClicked"
            android:focusable="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/Main_InfoView_PopUp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/big_round_white"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/Main_ImageView_PopUp"
            app:layout_constraintStart_toStartOf="@id/Main_ImageView_PopUp"
            app:layout_constraintTop_toBottomOf="@id/Main_ImageView_PopUp">

        <TextView
                android:id="@+id/Main_TextView_PopUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumeb"
                android:textColor="#000000"
                android:textSize="20dp" />

        <TextView
                android:id="@+id/Main_TextView_PopUpCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nanumr"
                android:textColor="#000000"
                android:textSize="16dp" />

    </LinearLayout>

    <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/Main_blurView_TOP"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:realtimeBlurRadius="50dp"
            app:realtimeOverlayColor="#BEFFFFFF" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onTitleClicked"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/LoadingBack"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/Main_blurView_TOP"
            app:layout_constraintBottom_toTopOf="@id/Main_blurView_Bottom"
            android:background="#FFFFFF" />

    <ImageView
            android:id="@+id/LoadingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>